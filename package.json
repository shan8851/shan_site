{
  "private": true,
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out dist",
    "clean:all": "rm -rf .next out dist node_modules && pnpm install",
    "clean:cache": "rm -rf .next/cache && pnpm store prune",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "ANALYZE=true next build",
    "postinstall": "next telemetry disable"
  },
  "dependencies": {
